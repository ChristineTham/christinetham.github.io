---
import type { CollectionEntry } from 'astro:content'
import { getCollection } from 'astro:content'
import { PAGE_SIZE, SiteMetadata, getPosts } from '../config'
import Base from '../layouts/base.astro'
import Carousel from '../components/carousel.astro'
import BlogRoll from '../components/blogroll.astro'
import CategoryRoll from '../components/categoryroll.astro'
import WebRoll from '../components/webroll.astro'
import coverImage from '../images/me/home.jpeg'

const frontmatter: CollectionEntry<'page'>['data'] = {
  title: SiteMetadata.title,
  description: SiteMetadata.description,
  coverImage: coverImage
}

const carouselPages = [
  { name: 'Cowarra Dam', image: '../images/gallery/carousel/Cowarra-Dam.jpeg' },
  { name: 'Mayfield Garden', image: '../images/gallery/carousel/Mayfield-Garden.jpeg' },
  { name: 'Mt Tomah', image: '../images/gallery/carousel/Mt-Tomah.jpeg' },
  { name: 'Oberon Dam', image: '../images/gallery/carousel/Oberon-Dam.jpeg' }
]

const posts = await getPosts()

// console.log(latestPosts)
const categories = await getCollection('category')
---

<Base frontmatter={frontmatter}>
  <Carousel pages={carouselPages}>
    <h1
      class='text-left text-4xl font-extrabold tracking-tight text-rosely3 sm:text-5xl md:text-6xl'
    >
      <span class='block text-rosely5 xl:inline'>Chris Tham </span>
      <span class='block xl:inline'>Personal Web Site</span>{' '}
    </h1>
    <p
      class='mt-3 text-sm text-rosely6 sm:mx-auto sm:mt-5 sm:text-base md:mt-5 lg:mx-0 lg:text-2xl'
    >
      artist, consultant, cyclist, designer, musician, photographer, world traveller.
    </p>
    <div class='mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start'>
      <div class='rounded-md shadow-sm'>
        <a
          href={import.meta.env.BASE_URL + 'bio'}
          class='flex w-full items-center justify-center rounded-md border border-transparent bg-rosely9 px-8 py-2 text-base font-medium text-white hover:bg-rosely-c dark:bg-rosely-b dark:text-rosely0 dark:hover:bg-rosely5 md:px-10 md:py-3 md:text-lg'
        >
          About Me
        </a>
      </div>
      <div class='mt-3 sm:ml-3 sm:mt-0'>
        <a
          href={import.meta.env.BASE_URL + 'blog'}
          class='flex w-full items-center justify-center rounded-md border border-transparent bg-rosely-a px-8 py-2 text-base font-medium text-rosely0 hover:bg-rosely5 dark:bg-rosely1 dark:text-rosely-b dark:hover:bg-rosely8 md:px-10 md:py-3 md:text-lg'
          rel='noopener noreferrer'
          target='_blank'
        >
          Read Blog
        </a>
      </div>
    </div>
  </Carousel>
  <div class='flex flex-row items-center bg-rosely7 p-4 dark:bg-rosely1 sm:px-6 lg:px-8'>
    <h2 class='text-2xl font-extrabold text-rosely8 dark:text-rosely-b md:text-4xl'>
      Featured websites
    </h2>
    <a
      href={import.meta.env.BASE_URL + 'websites'}
      class='dark:hover:brosely5 ml-4 mt-2 inline-block rounded-md bg-rosely9 px-2 py-2 text-base font-semibold text-white hover:bg-rosely-c dark:bg-rosely-b dark:text-rosely0 md:text-lg'
    >
      All Websites
    </a>
  </div>
  <WebRoll featured={true} />
  <h2
    class='mx-auto p-4 text-2xl font-extrabold text-rosely8 dark:text-rosely-b sm:mx-2 md:text-4xl lg:mx-4'
  >
    My Interests
  </h2>
  <CategoryRoll categories={categories} />
  <div class='flex flex-row items-center bg-rosely7 p-4 dark:bg-rosely1 sm:px-6 lg:px-8'>
    <h2 class='text-2xl font-extrabold text-rosely8 dark:text-rosely-b md:text-4xl'>
      My Latest Articles
    </h2>
    <a
      href={import.meta.env.BASE_URL + 'blog'}
      class='dark:hover:brosely5 ml-4 mt-2 inline-block rounded-md bg-rosely9 px-2 py-2 text-base font-semibold text-white hover:bg-rosely-c dark:bg-rosely-b dark:text-rosely0 md:text-lg'
    >
      All Articles
    </a>
    <a
      href={import.meta.env.BASE_URL + 'categories'}
      class='ml-4 mt-2 inline-block rounded-md bg-rosely-a px-2 py-2 text-base font-semibold text-rosely0 hover:bg-rosely5 dark:bg-rosely8 dark:text-rosely-b dark:hover:bg-rosely-c md:text-lg'
    >
      Categories
    </a>
    <a
      href={import.meta.env.BASE_URL + 'tags'}
      class='ml-4 mt-2 inline-block rounded-md bg-rosely-a px-2 py-2 text-base font-semibold text-rosely0 hover:bg-rosely5 dark:bg-rosely8 dark:text-rosely-b dark:hover:bg-rosely-c md:text-lg'
    >
      Tags
    </a>
  </div>
  <BlogRoll posts={posts.slice(0, PAGE_SIZE)}>
    <a
      href={import.meta.env.BASE_URL + 'blog/2'}
      class='dark:hover:brosely5 mt-4 inline-block rounded-md bg-rosely9 p-2 text-base font-semibold text-white hover:bg-rosely-c dark:bg-rosely-b dark:text-rosely0 md:text-lg'
    >
      More Articles
    </a>
  </BlogRoll>
</Base>
