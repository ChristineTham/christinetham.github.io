---
import type { CollectionEntry } from 'astro:content'
import Base from '../common/base.astro'
import PageHero from '../common/pagehero.astro'

import coverImage from '../images/svg/undraw/page_not_found.svg'
import socialImage from '../images/undraw/page_not_found.png'
const frontmatter: CollectionEntry<'page'>['data'] = {
  title: '404: Not found',
  description: "You just hit a route that doesn't exist... the sadness.",
  coverImage: coverImage,
  socialImage: socialImage
}
---

<Base frontmatter={frontmatter}>
  <header>
    <PageHero
      title={frontmatter.title!}
      description={frontmatter.description}
      coverImage={frontmatter.coverImage}
      socialImage={frontmatter.socialImage}
    />
  </header>
</Base>
