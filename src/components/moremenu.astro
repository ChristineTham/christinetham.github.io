---
import { Icon } from 'astro-icon'
import { COMMUNITY_INVITE_URL } from '../config'

type Props = {
  editHref: string
}

const { editHref } = Astro.props as Props
const showMoreSection = COMMUNITY_INVITE_URL
---

{showMoreSection && (
  <h2
    id="more-title"
    class="font-display text-sm font-medium text-rosely0 dark:text-rosely3 mt-4 space-y-3"
  >
    More
  </h2>
<ol role="list" class="mt-4 space-y-3 text-sm flex flex-col">
    {editHref && (
      <li class="py-1 text-rosely9 dark:text-roselyB flex items-center">
        <Icon pack="heroicons-outline" name="pencil" class="w-6 h-6 mr-2" />
        <a
          class="hover:text-roselyC dark:hover:text-rosely5"
          href={editHref}
          target="_blank"
        >
          <span>Edit this page</span>
        </a>
      </li>
    )}
    {COMMUNITY_INVITE_URL && (
      <li class="py-1 text-rosely9 dark:text-roselyB flex items-center">
        <Icon pack="heroicons-outline" name="chat-alt-2" class="w-6 h-6 mr-2" />
        <a
          class="hover:text-roselyC dark:hover:text-rosely5"
          href={COMMUNITY_INVITE_URL}
          target="_blank"
        >
          <span>Join our community</span>
        </a>
      </li>
    )}
  </ol>
)}
