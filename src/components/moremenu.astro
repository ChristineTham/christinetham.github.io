---
import { Icon } from 'astro-icon/components'
import { COMMUNITY_INVITE_URL } from '../config'

type Props = {
  editHref: string
}

const { editHref } = Astro.props as Props
const showMoreSection = COMMUNITY_INVITE_URL
---

{
  showMoreSection && (
    <>
      <h2
        id='more-title'
        class='font-display mt-4 space-y-3 text-sm font-medium text-rosely0 dark:text-rosely3'
      >
        More
      </h2>
      <ol role='list' class='mt-4 flex flex-col space-y-3 text-sm'>
        {editHref && (
          <li class='flex items-center py-1 text-rosely9 dark:text-roselyB'>
            <Icon name='heroicons:pencil' class='mr-2 h-6 w-6' />
            <a class='hover:text-roselyC dark:hover:text-rosely5' href={editHref} target='_blank'>
              <span>Edit this page</span>
            </a>
          </li>
        )}
        {COMMUNITY_INVITE_URL && (
          <li class='flex items-center py-1 text-rosely9 dark:text-roselyB'>
            <Icon name='heroicons:chat-bubble-bottom-center-text' class='mr-2 h-6 w-6' />
            <a
              class='hover:text-roselyC dark:hover:text-rosely5'
              href={COMMUNITY_INVITE_URL}
              target='_blank'
            >
              <span>Join our community</span>
            </a>
          </li>
        )}
      </ol>
    </>
  )
}
