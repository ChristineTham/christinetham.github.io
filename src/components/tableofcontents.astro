---
import type { MarkdownHeading } from 'astro'

type Props = {
  headings: MarkdownHeading[]
}

const { headings } = Astro.props as Props
---

<h2
  id='table-of-contents-title'
  class='font-display text-rosely0 dark:text-rosely3 text-sm font-medium'
>
  On this page
</h2>
<ol role='list' class='mt-4 py-1 text-sm'>
  {
    headings
      .filter(({ depth }) => depth > 1 && depth < 4)
      .map((heading) => (
        <li
          class={
            heading.depth == 2
              ? 'text-rosely9 dark:text-rosely-b'
              : 'text-rosely9 dark:text-rosely-b mt-2 py-1 pl-5'
          }
        >
          <a class='hover:text-rosely-c dark:hover:text-rosely5' href={`#${heading.slug}`}>
            {heading.text}
          </a>
        </li>
      ))
  }
</ol>
