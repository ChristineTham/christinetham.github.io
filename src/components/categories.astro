---
import type { CollectionEntry } from 'astro:content'
import { getEntries } from 'astro:content'

const { categories } = Astro.props

const cats = await getEntries(categories)
---

{
  categories && (
    <div class='flex flex-row flex-wrap items-start gap-2 pb-2'>
      {cats.map((category: CollectionEntry<'category'>) => (
        <a
          itemprop='articleSection'
          href={`${import.meta.env.BASE_URL}category/${encodeURIComponent(category.id)}/`}
          class='inline-block rounded-sm bg-rosely9 px-3 py-1 text-xs font-medium uppercase tracking-tight text-white hover:bg-rosely-c'
        >
          {category.data.title}
          <span class='sr-only'>category</span>
        </a>
      ))}
    </div>
  )
}
